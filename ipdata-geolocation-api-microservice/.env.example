# Elasticsearch Configuration
# Comma-separated list of Elasticsearch nodes
ELASTICSEARCH_NODE=https://elasticsearch1:9200,https://elasticsearch2:9200
# Elasticsearch authentication
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=your_password_here
# Path to Elasticsearch CA certificate (mounted in container)
ELASTICSEARCH_CA_CERTS_PATH=/app/ca.crt
# Base name for Elasticsearch indices (will be appended with date: ipdata-YYYY-MM-DD)
ELASTICSEARCH_INDEX_BASE=ipdata

# Redis Configuration
# Redis host (use 'redis' for Docker Compose, or external IP/hostname)
REDIS_HOST=redis
# Redis port
REDIS_PORT=6379
# Cache expiry time in seconds (default: 86400 = 24 hours)
REDIS_CACHE_EXPIRY_SECONDS=86400

# IPData API Configuration
# Your IPData.co API key (get one from https://ipdata.co)
IPDATA_API_KEY=your_ipdata_api_key_here

# Request Limiting
# Maximum number of requests to IPData.co API per day
REQUEST_LIMIT=100000

# Debug Mode
# Set to true for verbose logging
DEBUG=false